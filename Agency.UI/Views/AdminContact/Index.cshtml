@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad Soyad</th>
        <td>Mesaj</td>
        <td>Email</td>
        <td>Okunduysa Okundu Olarak İşaretle</td>
    </tr>
    @foreach (var item in Model)
	{
<tr>
    <td>@item.Id</td>
    <td>@item.Fullname</td>
    <td>@item.Message</td>
    <td>@item.Email</td>
    @if (item.Status == false)
    {
        <td><a class="btn btn-primary" asp-controller="AdminContact" asp-action="Update" asp-route-id="@item.Id">Okundu Olarak İşaretle</a></td>
    }
    else
    {
        <td><a class="btn btn-primary">Okundu</a></td>
    }

</tr>
	}
</table>

