@model Portfolio 
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    <form asp-controller="AdminPortfolio" asp-action="Update" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <label>Önceki Resim</label>
                            <img src="~/img/@Model.Image" width="70" height="70"/>
                            <br />
                            <label>Resim</label>
                            <input type="file" asp-for="UploadImage" />
                            <br />
                            <label>Portfolyo</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <br />
                            <button class="btn btn-primary" type="submit">Güncelle</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

