@model List<Services>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table table-bordered">
    <tr>
        <th>ID</th>
        <th>Servis</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>@item.Description</td>
    <td>@Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
    <td><a class="btn btn-primary" asp-controller="AdminServices" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
</tr>
    }
</table>
<br />
<a class="btn btn-primary" asp-action="Create">Ekle</a>

