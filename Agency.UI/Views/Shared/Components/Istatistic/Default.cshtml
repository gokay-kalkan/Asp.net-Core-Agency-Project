
@model List<Istatistic> 

    <section id="info" class="info-section">
        <div class="container text-xs-center">
            <!-- Section Header -->
            <div class="col-md-12 col-sm-12 col-xs-12 section-header wow fadeInDown">
                <h2><span class="highlight-text">İstatistiklerimiz</span></h2>

                <p class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1">Şu ana kadar sorunsuz teslim ettiğimiz yaptığımız projeler ve müşterilerimizin memnuniyetini istatistiklik ile görelim.</p>
            </div>
            <!-- Section Header End -->
            <div class="row wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                @foreach (var item in Model)
                {


                
                <div class="col-md-3 col-sm-6 col-xs-12 text-xs-center">

                    <i class="@item.CompletedClass" style="visibility: visible; animation-name: pulse;"></i>
                    <h4>Teslim Edilen</h4>
                    <h1 class="text-primary">@item.Completed</h1>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 text-xs-center">

                    <i class="@item.ProjectClass" style="visibility: visible; animation-name: pulse;"></i>
                    <h4>Proje</h4>
                    <h1 class="text-primary">@item.Projects</h1>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-12 text-xs-center">

                    <i class="@item.CustomersClass" style="visibility: visible; animation-name: pulse;"></i>
                    <h4>Müşteri</h4>
                    <h1 class="text-primary">@item.Customers</h1>
                </div>
                }
            </div>
        </div>
    </section>